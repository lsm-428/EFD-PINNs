{
  "metadata": {
    "stage": "2_dynamic_response",
    "version": "1.0",
    "created_at": "2024-11-28",
    "description": "阶段2：动态响应验证 - 学习时间演化",
    "goal": "验证动态响应时间、超调、稳定性",
    "success_criteria": {
      "response_time_t90": "1-10ms",
      "overshoot": "<10%",
      "settling_time": "<20ms",
      "causality": "no_anticipation"
    }
  },
  "model": {
    "input_dim": 62,
    "output_dim": 24,
    "hidden_dims": [256, 256, 128, 64],
    "activation": "gelu",
    "use_batch_norm": true,
    "use_residual": true,
    "dropout": 0.05
  },
  "training": {
    "epochs": 300,
    "batch_size": 32,
    "optimizer": "adam",
    "learning_rate": 0.001,
    "weight_decay": 1e-5,
    "lr_scheduler": "cosine",
    "warmup_epochs": 10,
    "min_lr": 1e-6,
    "early_stopping_patience": 200,
    "gradient_clipping": 0.5,
    "mixed_precision": true
  },
  "physics": {
    "physics_weight": 0.2,
    "_comment_weight": "提高物理权重，强化动态约束",
    "num_physics_points": 200,
    "_comment_points": "增加物理点，覆盖更多时空位置",
    "adaptive_physics_weight": true,
    "residual_weights": {
      "_comment": "=== 阶段2：聚焦动态响应 ===",
      
      "young_lippmann": 3.0,
      "_young_lippmann_note": "保持Young-Lippmann约束",
      
      "contact_angle_constraint": 2.0,
      "_contact_angle_note": "接触角约束",
      
      "contact_line_dynamics": 5.0,
      "_contact_line_note": "⭐ 核心：接触线动力学",
      
      "interface_stability": 3.0,
      "_interface_note": "界面稳定性",
      
      "volume_conservation": 2.0,
      "_volume_note": "体积守恒",
      
      "interface_curvature": 1.0,
      "surface_tension": 1.0,
      
      "_comment_flow": "=== 流场约束（中等权重）===",
      "continuity": 0.5,
      "momentum_u": 0.5,
      "momentum_v": 0.5,
      "momentum_w": 0.5,
      "two_phase_continuity": 0.3,
      "two_phase_momentum_u": 0.3,
      "two_phase_momentum_v": 0.3,
      "two_phase_momentum_w": 0.3,
      
      "_comment_others": "=== 其他约束（低权重）===",
      "dielectric_charge": 0.1,
      "thermodynamic": 0.05,
      "frequency_response": 0.5,
      "_frequency_note": "频率响应对动态重要",
      "optical_properties": 0.01,
      "energy_efficiency": 0.01,
      "volume_consistency": 0.1,
      "ink_potential_min": 0.0,
      "ink_energy_balance": 0.05,
      
      "data_fit": 1.0
    }
  },
  "data": {
    "use_dynamic": true,
    "_comment_dynamic": "⭐ 启用动态时空数据生成",
    "num_samples": 5000,
    "_comment_samples": "增加样本数，覆盖更多时空点",
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15,
    "normalization": "standard",
    "augmentation": false,
    "noise_level": 0.0,
    "spatial_resolution": [10, 10, 5],
    "temporal_resolution": 100,
    "time_range": [0, 0.02],
    "voltage_sequence": "step"
  },
  "validation": {
    "interval": 5,
    "metrics": [
      "response_time_t90",
      "overshoot",
      "settling_time",
      "causality_check",
      "temporal_consistency"
    ],
    "save_best": true,
    "save_all_checkpoints": false
  },
  "monitoring": {
    "track_physics_residuals": true,
    "track_gradient_norms": true,
    "track_weight_distributions": true,
    "generate_diagnostic_plots": true,
    "diagnostic_interval": 10
  },
  "output": {
    "dir": "./stage2_dynamic_response",
    "save_checkpoints": true,
    "checkpoint_interval": 20,
    "save_visualizations": true,
    "save_diagnostics": true
  },
  "seed": 42,
  "deterministic": true,
  "notes": [
    "阶段2目标：验证模型能否预测时间演化",
    "关键验证：响应时间1-10ms，超调<10%",
    "使用动态数据：包含完整时空演化",
    "成功后进入阶段3：空间分布验证"
  ]
}
