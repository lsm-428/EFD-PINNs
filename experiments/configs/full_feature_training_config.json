{
  "model": {
    "input_dim": 62,
    "output_dim": 24,
    "hidden_layers": [64, 32, 16],
    "activation": "relu",
    "dropout_rate": 0.2,
    "use_batch_norm": true,
    "use_residual": true
  },
  "training": {
    "epochs": 200,
    "batch_size": 64,
    "early_stopping": true,
    "patience": 15,
    "save_best_only": true,
    "monitor_metric": "val_loss",
    "min_delta": 1e-5,
    "multi_stage_training": true,
    "use_amp": true
  },
  "data": {
    "num_samples": 2000,
    "num_val_samples": 200,
    "num_test_samples": 100,
    "shuffle": true,
    "enhanced_data_generation": true,
    "augmentation": {
      "enable": true,
      "noise_level": 0.01,
      "scale_range": [0.9, 1.1],
      "rotation": false
    }
  },
  "physics": {
    "enabled": true,
    "physics_weight": 1.0,
    "adaptive_physics_weight": true,
    "residual_weights": {
      "young_lippmann": 1.0
    },
    "physics_weight_scheduler": {
      "type": "cosine",
      "initial": 0.5,
      "final": 1.5,
      "period": 50
    },
    "constraints": {
      "mass_conservation": true,
      "momentum_conservation": true,
      "energy_conservation": true
    },
    "num_physics_points": 2000
  },
  "optimizer": "AdamW",
  "learning_rate": {
    "scheduler": "cosine",
    "warmup_epochs": 10,
    "min_lr": 1e-6,
    "use_cosine_restarts": true,
    "restart_period": 50
  },
  "regularization": {
    "l1_reg": 0.0,
    "l2_reg": 1e-5,
    "dropout_rate": 0.2,
    "gradient_clip_norm": 1.0
  },
  "monitoring": {
    "log_frequency": 10,
    "save_frequency": 20,
    "validation_frequency": 1,
    "physics_validation_frequency": 5,
    "generate_plots": true,
    "generate_reports": true
  },
  "output": {
    "dir": "./outputs_full_feature",
    "save_model": true,
    "save_history": true,
    "save_visualizations": true,
    "save_reports": true
  },
  "multi_stage_config": {
    "1": {
      "epochs": 50,
      "learning_rate": 1e-3,
      "description": "Pretraining Stage",
      "physics_weight": 0.5
    },
    "2": {
      "epochs": 75,
      "learning_rate": 5e-4,
      "description": "Physics Enhancement Stage",
      "physics_weight": 1.0
    },
    "3": {
      "epochs": 75,
      "learning_rate": 1e-4,
      "description": "Fine-tuning Stage",
      "physics_weight": 1.5
    }
  },
  "device": "auto",
  "seed": 42,
  "deterministic": true
}