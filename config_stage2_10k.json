{
  "metadata": {
    "stage": "2_dynamic_response_10k",
    "version": "2.2",
    "created_at": "2024-11-30",
    "description": "阶段2长期训练：10000 epochs，修复响应时间和超调",
    "goal": "响应时间1-10ms，超调<10%",
    "improvements": [
      "增加阻尼比 zeta=0.85（高阻尼，减少超调到约8%）",
      "调整时间常数 tau=5ms（使t90在3-5ms范围）",
      "强化界面稳定性约束",
      "10000 epochs长期训练"
    ],
    "success_criteria": {
      "response_time_t90": "1-10ms",
      "overshoot": "<10%",
      "settling_time": "<20ms"
    }
  },
  "model": {
    "input_dim": 62,
    "output_dim": 24,
    "hidden_dims": [256, 256, 128, 64],
    "activation": "gelu",
    "use_batch_norm": true,
    "use_residual": true,
    "dropout": 0.05
  },
  "training": {
    "epochs": 10000,
    "batch_size": 64,
    "optimizer": "adam",
    "learning_rate": 0.001,
    "weight_decay": 1e-5,
    "lr_scheduler": "cosine",
    "warmup_epochs": 100,
    "min_lr": 1e-7,
    "early_stopping_patience": 500,
    "gradient_clipping": 1.0,
    "mixed_precision": true
  },
  "physics": {
    "physics_weight": 0.3,
    "num_physics_points": 500,
    "adaptive_physics_weight": true,
    "residual_weights": {
      "young_lippmann": 3.0,
      "contact_angle_constraint": 2.0,
      "contact_line_dynamics": 1.5,
      "interface_stability": 5.0,
      "volume_conservation": 2.0,
      "interface_curvature": 1.0,
      "surface_tension": 1.0,
      "continuity": 0.3,
      "momentum_u": 0.3,
      "momentum_v": 0.3,
      "momentum_w": 0.3,
      "two_phase_continuity": 0.05,
      "two_phase_momentum_u": 0.05,
      "two_phase_momentum_v": 0.05,
      "two_phase_momentum_w": 0.05,
      "dielectric_charge": 0.1,
      "thermodynamic": 0.05,
      "frequency_response": 0.3,
      "optical_properties": 0.01,
      "energy_efficiency": 0.01,
      "volume_consistency": 0.1,
      "ink_potential_min": 0.0,
      "ink_energy_balance": 0.05,
      "data_fit": 1.0
    }
  },
  "materials": {
    "epsilon_r": 4.0,
    "gamma": 0.072,
    "dielectric_thickness": 4e-7,
    "theta0": 110.0
  },
  "geometry": {
    "Lx": 1.84e-4,
    "Ly": 1.84e-4,
    "Lz": 2.0855e-5
  },
  "data": {
    "use_dynamic": true,
    "num_samples": 8000,
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15,
    "normalization": "standard",
    "augmentation": false,
    "noise_level": 0.0,
    "spatial_resolution": [10, 10, 5],
    "temporal_resolution": 100,
    "time_range": [0, 0.02],
    "voltage_range": [0, 30],
    "voltage_sequence": "step",
    "dynamics_params": {
      "tau": 0.005,
      "zeta": 0.85
    }
  },
  "validation": {
    "interval": 50,
    "metrics": ["response_time_t90", "overshoot", "settling_time"],
    "save_best": true,
    "save_all_checkpoints": false
  },
  "monitoring": {
    "track_physics_residuals": true,
    "track_gradient_norms": true,
    "track_weight_distributions": false,
    "generate_diagnostic_plots": true,
    "diagnostic_interval": 100
  },
  "output": {
    "dir": "./stage2_10k",
    "save_checkpoints": true,
    "checkpoint_interval": 500,
    "save_visualizations": true,
    "save_diagnostics": true
  },
  "seed": 42,
  "deterministic": true
}
